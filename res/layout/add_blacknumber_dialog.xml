<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_bg"
    android:paddingTop="10dp" >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="添加黑名单"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#333" />

    <EditText
        android:id="@+id/et_blacknumber"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/tv_title"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/et_pwd"
        android:hint="请输入黑名单号码"
        android:textColor="#dd000000"
        android:inputType="number"
        android:textSize="12sp" />

    <CheckBox
        android:id="@+id/cb_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_blacknumber"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="电话拦截"
        android:textColor="#dd000000"
        android:textSize="12sp" />
    <CheckBox
        android:id="@+id/cb_sms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_alignBaseline="@id/cb_phone"
        android:text="短信拦截"
        android:textColor="#dd000000"
        android:textSize="12sp" />

    <View
        android:id="@+id/v_h"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/cb_phone"
        android:layout_marginTop="15dp"
        android:background="#ddaaaaaa" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/v_h"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bt_dialog_cancle"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/bt_dialog"
            android:text="取消"
            android:textColor="#dd000000" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="45dp"
            android:background="#ddaaaaaa" />

        <Button
            android:id="@+id/bt_dialog_ok"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/bt_dialog"
            android:text="确定"
            android:textColor="#3593dd" />
    </LinearLayout>

</RelativeLayout>