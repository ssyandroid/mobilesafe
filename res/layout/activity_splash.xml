<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash"
    android:id="@+id/rl_root_splash"
    tools:context="com.sansan.mobilesafe.SplashActivity" >

    <ProgressBar
        android:id="@+id/pb_splash"
        style="@style/myProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:progressDrawable="@drawable/spinner_ks" />

    <TextView
        android:id="@+id/tv_vesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/pb_splash"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:textSize="14sp"
        android:textColor="#3593dd"
        android:shadowColor="#dddddd"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:text="版本：1.0" />

</RelativeLayout>